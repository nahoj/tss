#!/usr/bin/env zsh
# Can be called as a script or as a function

# Must match the values in Makefile
local PREFIX=$HOME/.local
local INSTALL_DIR=$PREFIX/share/tagspaces-cli

emulate -LR zsh
setopt err_return local_loops no_unset pipe_fail
setopt -m 'warn*'

local IFS=

zmodload -F zsh/stat b:zstat

. "$INSTALL_DIR/util.zsh"

. "$INSTALL_DIR/files.zsh"
. "$INSTALL_DIR/filter.zsh"
. "$INSTALL_DIR/edit.zsh"
. "$INSTALL_DIR/index.zsh"
. "$INSTALL_DIR/label.zsh"
. "$INSTALL_DIR/location.zsh"
. "$INSTALL_DIR/tags.zsh"
. "$INSTALL_DIR/test.zsh"

. "$INSTALL_DIR/main.zsh"

tss "$@"
